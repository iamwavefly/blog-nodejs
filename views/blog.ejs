<%- include("partials/_header") %> 
<div class="nav-scroller bg-white shadow-sm">
  <nav class="nav nav-underline">
    <a class="nav-link active" href="#">Exlpore with Devs</a>
    <a class="nav-link" href="#">
      All Blog
      <span class="badge badge-pill bg-light align-text-bottom"><% articles.forEach((article, len) => { %>
        <p><%= article.len %></p>
        <% }) %> </span>
    </a>
    <a class="nav-link" href="#">Technology</a>
    <a class="nav-link" href="#">Health</a>
    <a class="nav-link" href="#">Politics</a>
    <a class="nav-link" href="#">Sport</a>
    <a class="nav-link bg-purple text-white" href="/blog/new">New</a>
  </nav>
</div>

<main role="main" class="container">
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
    <img class="mr-3" src="/docs/4.5/assets/brand/bootstrap-outline.svg" alt="" width="48" height="48">
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100">Devs</h6>
      <small>Since 2011</small>
    </div>
  </div>

  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent Articles</h6>


    <% articles.forEach(article => { %>
        <div class="media text-muted pt-3">
        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
            <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <strong class="text-gray-dark"><%= article.title.substr(0,100) %></strong>
                    <a href="/blog/<%= article.id %>">Read</a>
                </div>
                <p class="d-block"><span class="text-muted"><%= article.date.toLocaleDateString() %></span> - <%= article.content.substr(0,100) %>...</p>
                <!-- const colors = "" -->
                <% if ( article.category == "health") { %>
                  <% console.log("new") %>
                <% } %>
                <a href="#" class="btn btn-primary btn-sm"><%= article.category %></a>
                <form action="/blog/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
        </div>
    <% }) %> 
    









    <!-- <small class="d-block text-right mt-3">
      <a href="#">All suggestions</a>
    </small> -->
  </div>
</main>

<%- include("partials/_footer") %> 